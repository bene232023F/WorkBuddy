<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stats_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="edu.vt.mobiledev.workbuddy.ui.stats.StatsFragment">

    <!-- Daily stats header -->
    <TextView
        android:id="@+id/tv_daily_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_stats"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Weekly stats header -->
    <TextView
        android:id="@+id/tv_weekly_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/weekly_stats"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_daily_stats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Placeholder for chart or graph -->
    <FrameLayout
        android:id="@+id/chart_container"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_weekly_stats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Motivational quote -->
    <TextView
        android:id="@+id/tv_quote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/motivational_quote"
        android:textStyle="italic"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/chart_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>