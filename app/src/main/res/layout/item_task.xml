<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_task_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Completion checkbox -->
    <CheckBox
        android:id="@+id/cb_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Task title -->
    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/task_title_placeholder"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/cb_complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/cb_complete"
        android:layout_marginStart="8dp"/>

    <!-- Due time or small info -->
    <TextView
        android:id="@+id/tv_task_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/task_subtitle_placeholder"
        android:textSize="12sp"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="@id/tv_task_title"
        app:layout_constraintTop_toBottomOf="@id/tv_task_title"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
